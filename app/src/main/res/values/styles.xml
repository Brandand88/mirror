<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Theme.Leanback" />

    <style name="BaseBody1TextStyle" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="BaseDisplay1TextStyle" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TemperatureStyle" parent="BaseDisplay1TextStyle">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="TemperatureIconStyle" parent="BaseDisplay1TextStyle">
    </style>

    <style name="WeatherTextStyle" parent="BaseBody1TextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="WeatherIconStyle" parent="BaseBody1TextStyle">
        <item name="android:singleLine">true</item>
    </style>

    <style name="TimeStyle" parent="BaseDisplay1TextStyle">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="DateStyle" parent="BaseBody1TextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="NewsStyle" parent="BaseBody1TextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.Leanback.PlaybackControlsButtonStyle">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="GreetTypeTextStyle" parent="BaseBody1TextStyle">
        <item name="android:textSize">64dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GreetNameTextStyle" parent="BaseBody1TextStyle">
        <item name="android:textSize">64dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
